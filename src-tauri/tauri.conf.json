{
    "build": {
        "beforeDevCommand": "yarn dev",
        "beforeBuildCommand": "yarn build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist"
    },
    "package": {
        "productName": "Md-Reader",
        "version": "0.0.0"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "fs": {
                "scope": ["$HOME/**/*", "$HOME"],
                "readFile": true,
                "readDir": true,
                "exists": true
            },
            "shell": {
                "all": false,
                "open": true
            },
            "path": {
                "all": true
            }
        },
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "com.github.elias-gill.tauri-md-reader",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ]
        },
        "security": {
            "csp": null
        },
        "windows": [
            {
                "fullscreen": false,
                "resizable": true,
                "title": "Markdown Reader",
                "width": 800,
                "height": 600
            }
        ],
        "cli": {
            "args": [
                {
                    "name":"file",
                    "index": 1,
                    "takesValue": true
                },
                {
                    "name": "path",
                    "short": "p",
                    "multipleOccurrences": false,
                    "takesValue": true
                }
            ]
        }
    }
}
